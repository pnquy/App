<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffe6ed">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_submit"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Nộp Bài Tập"
            app:titleTextColor="#ffffff"
            app:navigationIcon="@drawable/ic_close"
            app:navigationIconTint="#ffffff"
            android:background="#c96e80" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Ô Tiêu đề (Chế độ chỉ đọc để biết đang nộp cho bài nào) -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_submit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề bài tập"
            android:enabled="false"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Ô Nội dung/Ghi chú -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_submit_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ghi chú bài làm (ví dụ: Em gửi bài tập ạ)"
            android:minLines="4"
            android:gravity="top" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_attach_file_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Đính kèm tệp"
        app:icon="@drawable/ic_attach_file"
        style="@style/Widget.MaterialComponents.Button.TextButton" />

    <Button
        android:id="@+id/btn_submit_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Nộp bài"
        style="@style/StudentPortalButton"/>

</LinearLayout>