<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFE6E6"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar"
            android:layout_marginEnd="10dp"
            android:clipToOutline="true" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="| TO DO"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_check"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_check" />

        <ImageView
            android:id="@+id/img_chat"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_chat" />

        <ImageView
            android:id="@+id/img_bell"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_bell"
            android:layout_margin="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Mission -->
        <TextView
            android:text="Mission"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="To nurture a vibrant culture of academic wellness responsive to the challenges of technology and the global community."
            android:paddingBottom="8dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Vision -->
        <TextView
            android:text="Vision"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="An eminent center of excellent higher education towards societal advancement."
            android:paddingBottom="8dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Philosophy -->
        <TextView
            android:text="Philosophy"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Social transformation for a caring community and ecologically balanced country."
            android:paddingBottom="8dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <!-- Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_feedback"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_feedback"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_feedback"
            android:text="Write a Feedback"
            android:textSize="14sp"
            android:textColor="#E91E63"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_info"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_info"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_info"
            android:text="About"
            android:textSize="14sp"
            android:textColor="#E91E63"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_mail"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_mail"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_mail"
            android:text="Contact or Email Us"
            android:textSize="14sp"
            android:textColor="#E91E63"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>
</LinearLayout>
